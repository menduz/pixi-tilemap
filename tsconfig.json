{
  "compilerOptions": {
    "module": "none",
    "target": "es2015",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "bin/pixi-tilemap.js",
    "sourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "typeRoots": [
      "lib/"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/**/*"
  ]
}